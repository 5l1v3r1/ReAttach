<ui:DialogWindow x:Class="ReAttach.Dialogs.ReAttachDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.10.0"
    Title="ReAttach - Waiting for process" Height="185" Width="550" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical" Margin="15">
        <TextBlock TextWrapping="Wrap" Height="45">
            <TextBlock.Inlines>
                <Run>ReAttach can't find a running process matching</Run>
                <Run x:Name="ProcessName" FontWeight="Bold">Processname (username).</Run>
                <Run>If you start such a process with this dialog open, ReAttach will automatically connect your debugger to it.</Run>            
            </TextBlock.Inlines>
        </TextBlock>
        <TextBlock Margin="0,7,0,17">
            <TextBlock.Inlines>
                <Run>Status:</Run>
                <TextBlock FontWeight="Bold">Waiting for process to start</TextBlock>
                <TextBlock x:Name="DotsText" FontWeight="Bold"></TextBlock>
            </TextBlock.Inlines>
        </TextBlock>

        <Button Width="100" Height="26" Click="CloseButtonClick" Content="_Cancel" HorizontalAlignment="Center"/>
    </StackPanel>
</ui:DialogWindow>